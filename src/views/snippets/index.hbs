{{#if viewData.snippets.length}}
    {{#each viewData.snippets}}
        <section>
            <h1><a href="/{{id}}">{{title}}</a></h1>
            <ul>
                <li>Created: {{createdAt}}</li>
            </ul>
            <p>{{content}}</p>
            <button id="editButton"><a href="./{{id}}/edit/">Edit</a></button>
            <button id="removeButton"><a href="./{{id}}/remove/">Delete</a></button>
        </section>
    {{/each}}
{{else}}
    <p>No snippets?</p>
{{/if}}